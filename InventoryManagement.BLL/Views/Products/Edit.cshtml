@model InventoryManagement.Web.ViewModels.ProductFormViewModel
@{
    ViewData["Title"] = "Modifier un produit";
}

<h1 class="h3 mb-3">Modifier @Model.Product.ProductName</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Product.ProductId" />
    <div class="card mb-3">
        <div class="card-body">
            <partial name="_ProductForm" model="Model" />
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Enregistrer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
