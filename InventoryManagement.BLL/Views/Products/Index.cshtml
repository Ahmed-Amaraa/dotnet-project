@model InventoryManagement.Web.ViewModels.ProductListViewModel
@using System.Linq
@{
    ViewData["Title"] = "Produits";
    var categories = Model.Products.Select(p => p.Category ?? "").Where(c => !string.IsNullOrWhiteSpace(c)).Distinct().OrderBy(c => c).ToList();
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">Produits</h1>
    <a class="btn btn-primary" asp-action="Create">Ajouter un produit</a>
</div>

@if (TempData.ContainsKey("SuccessMessage"))
{
    <div class="alert alert-success" role="alert">@TempData["SuccessMessage"]</div>
}
@if (TempData.ContainsKey("ErrorMessage"))
{
    <div class="alert alert-danger" role="alert">@TempData["ErrorMessage"]</div>
}

<form asp-action="Index" method="get" class="row g-2 mb-4">
    <div class="col-md-4">
        <input type="text" name="search" value="@Model.Search" class="form-control" placeholder="Rechercher par nom" />
    </div>
    <div class="col-md-3">
        <select name="category" class="form-select">
            <option value="">Toutes les catégories</option>
            @foreach (var category in categories)
            {
                <option value="@category" selected="@(Model.Category == category ? "selected" : null)">@category</option>
            }
        </select>
    </div>
    <div class="col-md-3">
        <select name="supplierId" class="form-select">
            <option value="">Tous les fournisseurs</option>
            @foreach (var supplier in Model.Suppliers)
            {
                <option value="@supplier.SupplierId" selected="@(Model.SupplierId == supplier.SupplierId ? "selected" : null)">@supplier.SupplierName</option>
            }
        </select>
    </div>
    <div class="col-md-2 d-grid">
        <button type="submit" class="btn btn-outline-secondary">Filtrer</button>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Catégorie</th>
                <th>Quantité</th>
                <th>Seuil</th>
                <th>Prix (€)</th>
                <th>Fournisseur</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @if (!Model.Products.Any())
        {
            <tr><td colspan="7" class="text-center text-muted">Aucun produit</td></tr>
        }
        else
        {
            foreach (var item in Model.Products)
            {
                var rowClass = item.IsLowStock ? "table-warning" : string.Empty;
                <tr class="@rowClass">
                    <td>@item.ProductName</td>
                    <td>@item.Category</td>
                    <td>@item.Quantity</td>
                    <td>@item.ReorderLevel</td>
                    <td>@item.UnitPrice.ToString("F2")</td>
                    <td>@item.Supplier?.SupplierName</td>
                    <td class="text-end">
                        <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-sm btn-outline-secondary">Détails</a>
                        <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-sm btn-outline-primary">Modifier</a>
                        <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-sm btn-outline-danger">Supprimer</a>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>
