@model InventoryManagement.Web.Models.Product
@{
    ViewData["Title"] = "Détails produit";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">@Model.ProductName</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-outline-primary me-2">Modifier</a>
        <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
    </div>
</div>

<div class="row g-3">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">Informations</div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-5">Catégorie</dt>
                    <dd class="col-sm-7">@Model.Category</dd>
                    <dt class="col-sm-5">Quantité</dt>
                    <dd class="col-sm-7">@Model.Quantity</dd>
                    <dt class="col-sm-5">Seuil de réapprovisionnement</dt>
                    <dd class="col-sm-7">@Model.ReorderLevel</dd>
                    <dt class="col-sm-5">Prix unitaire</dt>
                    <dd class="col-sm-7">@Model.UnitPrice.ToString("F2") €</dd>
                    <dt class="col-sm-5">Valeur stock</dt>
                    <dd class="col-sm-7">@Model.InventoryValue.ToString("F2") €</dd>
                    <dt class="col-sm-5">Fournisseur</dt>
                    <dd class="col-sm-7">@Model.Supplier?.SupplierName</dd>
                    <dt class="col-sm-5">Alerte stock</dt>
                    <dd class="col-sm-7">
                        @if (Model.IsLowStock)
                        {
                            <span class="badge bg-warning text-dark">Stock faible</span>
                        }
                        else
                        {
                            <span class="badge bg-success">OK</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">Mettre à jour le stock</div>
            <div class="card-body">
                <form asp-action="UpdateStock" method="post" class="row g-2">
                    <input type="hidden" name="id" value="@Model.ProductId" />
                    <div class="col-8">
                        <label class="form-label">Quantité à ajouter / retirer</label>
                        <input type="number" name="amount" class="form-control" value="0" />
                        <small class="text-muted">Utilisez une valeur négative pour une sortie de stock.</small>
                    </div>
                    <div class="col-4 d-grid align-items-end">
                        <button type="submit" class="btn btn-primary">Mettre à jour</button>
                    </div>
                </form>
                @if (TempData.ContainsKey("ErrorMessage"))
                {
                    <div class="alert alert-danger mt-3" role="alert">@TempData["ErrorMessage"]</div>
                }
            </div>
        </div>
    </div>
</div>
