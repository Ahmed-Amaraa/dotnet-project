@model InventoryManagement.Web.Models.Supplier
@{
    ViewData["Title"] = "Supprimer un fournisseur";
    var hasProducts = ViewBag.HasProducts as bool? ?? false;
}

<h1 class="h3 mb-3">Confirmer la suppression</h1>

@if (hasProducts)
{
    <div class="alert alert-danger">
        Impossible de supprimer ce fournisseur car des produits lui sont associ√©s.
    </div>
    <a asp-action="Index" class="btn btn-secondary">Retour</a>
}
else
{
    <div class="alert alert-warning">
        Voulez-vous vraiment supprimer <strong>@Model.SupplierName</strong> ?
    </div>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="SupplierId" />
        <button type="submit" class="btn btn-danger">Supprimer</button>
        <a asp-action="Index" class="btn btn-secondary">Annuler</a>
    </form>
}
